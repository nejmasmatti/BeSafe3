<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ListView
        android:id="@+id/listview"
        android:layout_width="412dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="139dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_alerte_verbale"
        app:layout_constraintVertical_bias="1.0"></ListView>

    <Button
        android:id="@+id/button_alerte_vol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="30dp"
        android:text="Alerte vol"
        app:layout_constraintBottom_toTopOf="@+id/button_alerte_physique"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.262"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_alerte_physique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:text="Alerte agression physique"
        app:layout_constraintBottom_toTopOf="@+id/button_alerte_verbale"
        app:layout_constraintStart_toStartOf="@+id/button_alerte_vol"
        app:layout_constraintTop_toBottomOf="@+id/button_alerte_vol" />

    <Button
        android:id="@+id/button_alerte_verbale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="107dp"
        android:text="Alerte agression verbale"
        app:layout_constraintBottom_toTopOf="@+id/listview"
        app:layout_constraintStart_toStartOf="@+id/button_alerte_physique"
        app:layout_constraintTop_toBottomOf="@+id/button_alerte_physique" />


</androidx.constraintlayout.widget.ConstraintLayout>
