<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <com.richpath.RichPathView
        android:id="@+id/mapFrance"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_marginBottom="30dp"
        app:vector="@drawable/france_region_departement_svg" />


    <Button
        android:id="@+id/button_alerte_vol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alerte vol"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="530dp" />

    <Button
        android:id="@+id/button_alerte_physique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alerte agression physique"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="650dp" />

    <Button
        android:id="@+id/button_alerte_verbale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alerte agression verbale"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="590dp" />


</LinearLayout>
