<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="162dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="72dp"
            android:layout_height="42dp"
            android:layout_marginRight="15dp"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="22dp" />

        <LinearLayout
            android:id="@+id/layNivDanger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNivDanger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Niveau de Danger" />

            <TextView
                android:id="@+id/nivDanger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkBoxDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layNivDanger"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="To delete" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/txtTitreAlerte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Titre annonce" />

            <TextView
                android:id="@+id/titreAlerte"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@+id/txtTitreAlerte"
                android:ems="10"
                android:inputType="textMultiLine"
                android:minHeight="48dp"
                android:text="Titre"
                android:textColor="@color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                tools:ignore="TouchTargetSizeCheck" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/txtAdresse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lieu de l'agression" />

            <TextView
                android:id="@+id/adresse"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/txtAdresse"
                android:layout_marginTop="0dp"
                android:ems="10"
                android:inputType="textMultiLine"
                android:minHeight="48dp"
                android:text="Adresse"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/adresse"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:background="?android:attr/listDivider" />
        </RelativeLayout>
    </LinearLayout>



</LinearLayout>